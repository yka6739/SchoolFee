@model IEnumerable<SchoolManagement.Models.Section>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Master.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.SectionName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.SectionName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.SCID }) |
            @Html.ActionLink("Details", "Details", new { id=item.SCID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.SCID })
        </td>
    </tr>
}

</table>
